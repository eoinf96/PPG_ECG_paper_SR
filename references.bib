journal = {Sleep Medicine},
keywords = {Circadian rhythm,Gene expression,Heart,Metabolism},
number = {6},
pages = {656--667},
publisher = {Elsevier},
title = {{Potential role for peripheral circadian clock dyssynchrony in the pathogenesis of cardiovascular dysfunction}},
volume = {8},
year = {2007}
}
