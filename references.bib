doi = {10.1023/A:1007414906294},
issn = {07481977},
journal = {Journal of Clinical Monitoring},
keywords = {Aortic input impedance,Dietetic notch,Signal-processing,Systolic time intervals,Windkessel model},
number = {5},
pages = {309--316},
