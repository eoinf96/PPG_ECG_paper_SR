file = {:home/sjoh4091/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Murgo et al. - 1980 - Aortic input impedance in normal man relationship to pressure wave forms.pdf:pdf},
issn = {00097322},
journal = {Circulation},
