journal = {International Journal of Cardiology},
keywords = {Antihypertensive treatment,Blood pressure,Dipper,Non-dipper},
number = {3},
pages = {343--349},
publisher = {Elsevier},
title = {{Abnormal blood pressure circadian rhythm: A target organ damage?}},
