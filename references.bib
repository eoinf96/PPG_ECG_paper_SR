doi = {10.1371/journal.pone.0135659},
file = {:home/sjoh4091/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/von Wowern et al. - 2015 - Digital photoplethysmography for assessment of arterial stiffness repeatability and comparison with applan(2).pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
